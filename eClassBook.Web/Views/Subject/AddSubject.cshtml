@model eClassBook.ViewModels.Subject.SubjectInputModel
@{
    this.ViewData["Title"] = "Create new Subject!";
    

}

<h1 class="offset-md-5 mt-4">@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6 offset-md-3">
    <div class="form-group" asp-validation-summary="All">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group" asp-validation-summary="All">
        <label asp-for="GradeYear"></label>
        <input asp-for="GradeYear" class="form-control" />
        <span asp-validation-for="GradeYear" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary"/>
</form>
